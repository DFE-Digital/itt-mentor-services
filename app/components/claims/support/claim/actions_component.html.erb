<div class="claim-actions">
  <% if claim.payment_information_requested? %>
    <div class="govuk-button-group">
      <%= govuk_button_link_to t(".buttons.information_sent"), confirm_information_sent_claims_support_claims_payments_claim_path(claim) %>
      <%= govuk_button_link_to t(".buttons.reject"), confirm_reject_claims_support_claims_payments_claim_path(claim), secondary: true %>
    </div>
  <% elsif claim.payment_information_sent? %>
    <div class="govuk-button-group">
      <%= govuk_button_link_to t(".buttons.paid"), confirm_paid_claims_support_claims_payments_claim_path(claim) %>
      <%= govuk_button_link_to t(".buttons.reject"), confirm_reject_claims_support_claims_payments_claim_path(claim), secondary: true %>
    </div>
  <% elsif claim.sampling_in_progress? %>
    <div class="govuk-button-group">
      <%= govuk_button_link_to t(".buttons.approve"), confirm_approval_claims_support_claims_sampling_path(claim) %>
      <%= govuk_button_link_to t(".buttons.confirm_provider_reject"), new_provider_rejected_claims_support_claims_sampling_path(claim), secondary: true %>
    </div>
  <% elsif claim.sampling_provider_not_approved? %>
    <div class="govuk-button-group">
      <%= govuk_button_link_to t(".buttons.approve"), confirm_approval_claims_support_claims_sampling_path(claim) %>
      <%= govuk_button_link_to t(".buttons.reject_claim"), new_rejected_claims_support_claims_sampling_path(claim), secondary: true %>
    </div>
  <% elsif claim.sampling_not_approved? %>
    <%= govuk_button_link_to(t(".buttons.request_clawback"), new_request_clawback_claims_support_claims_clawbacks_path(claim)) %>
  <% end %>
</div>
