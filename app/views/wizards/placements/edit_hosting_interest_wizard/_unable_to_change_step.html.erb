<% content_for :page_title, t(".page_title") %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <span class="govuk-caption-l"><%= t(".caption") %></span>
    <h1 class="govuk-heading-l"><%= t(".title") %></h1>

    <p class="govuk-body"><%= t(".you_must_remove_any_providers") %></p>

    <p class="govuk-body"><%= t(".it_is_your_responsibility") %></p>
  </div>

  <div class="govuk-grid-column-full">
    <h2 class="govuk-heading-m"><%= t(".your_placements") %></h2>

    <%= render "/placements/schools/placements/table", placements: current_step.assigned_placements, school: current_step.school %>
  </div>
</div>
