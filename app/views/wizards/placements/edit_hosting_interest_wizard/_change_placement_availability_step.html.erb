<% content_for :page_title, title_with_error_prefix(
  t(".page_title"),
  error: current_step.errors.any?,
) %>

<%= form_for(current_step, url: current_step_path, method: :put) do |f| %>
  <%= f.govuk_error_summary %>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-l"><%= t(".caption") %></span>
      <h1 class="govuk-heading-l"><%= t(".title") %></h1>

      <p class="govuk-body"><%= t(".changing_your_placement_availability") %></p>
    </div>

    <div class="govuk-grid-column-full">
      <%= render "/placements/schools/placements/table", placements: current_step.placements, school: current_step.school %>

      <%= f.govuk_submit t(".continue"), warning: true %>
    </div>
  </div>
<% end %>
