<% content_for :page_title, title_with_error_prefix(
  t(".title", contextual_text:, subject: current_step.addition_subject_category),
  error: current_step.errors.any?,
) %>

<%= form_for(current_step, url: current_step_path, method: :put) do |f| %>
  <%= f.govuk_error_summary %>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-l"><%= contextual_text %></span>

      <%= f.govuk_collection_check_boxes(
        :additional_subject_ids,
        current_step.additional_subjects_for_selection,
        :id, :name,
        legend: {
          size: "l",
          text: t(".select_a_subject", subject: current_step.addition_subject_category),
          tag: "h1",
        },
        hint: { text: t(".hint") }
      ) %>

      <%= f.govuk_submit t(".continue") %>
    </div>
  </div>
<% end %>
