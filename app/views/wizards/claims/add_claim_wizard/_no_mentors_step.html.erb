<% content_for :page_title, title_with_error_prefix(
  t(".page_title", contextual_text:, provider_name: @wizard.provider_name),
  error: current_step.errors.any?,
) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l"><%= t(".heading_empty", provider_name: @wizard.provider_name) %></h1>

    <p class="govuk-body">
      <%= t(".no_mentors_with_claimable_hours", provider_name: @wizard.provider_name) %>
    </p>

    <p class="govuk-body">
      <%= govuk_link_to t(".change_provider"), step_path(:provider) %>
    </p>
  </div>
</div>
