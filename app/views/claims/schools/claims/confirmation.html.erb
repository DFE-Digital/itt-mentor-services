<% content_for :page_title, t(".page_title") %>
<% render "claims/schools/primary_navigation", school: @school, current: :claims %>

<div class="govuk-width-container">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <%= govuk_panel(title_text: t(".claim_submitted")) do %>
        <div><%= t(".your_reference_number_id") %></div>
        <div><strong><%= @claim.reference %></strong></div>
      <% end %>

      <p class="govuk-body"><%= t(".sent_email") %></p>

      <h2 class="govuk-heading-m"><%= t(".what_happens_next") %></h2>
      <p class="govuk-body"><%= t(".shared_with_provider", provider_name: @claim.provider_name) %></p>
      <p class="govuk-body"><%= t(".guidance") %></p>

      <h3 class="govuk-heading-s"><%= t(".processing_your_claim") %></h3>
      <p class="govuk-body"><%= t(".processing_your_claim_guidance") %></p>

      <p class="govuk-body">
        <%= govuk_link_to t(".view_claims"), claims_school_claims_path(@school), no_visited_state: true %>
      </p>

      <h4 class="govuk-heading-m"><%= t(".give_us_feedback") %></h4>
      <p class="govuk-body">
        <%= govuk_link_to(t(".what_do_you_think"), feedback_url, target: "_blank", rel: "noreferrer", class: "govuk-link--no-visited-state") %>
      </p>
    <div>
  <div>
</div>
