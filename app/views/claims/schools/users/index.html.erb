<% content_for(:before_content) do %>
  <%= render "claims/schools/primary_navigation", school: @school %>
<% end %>

<div class="govuk-width-container">
  <h1 class="govuk-heading-l"><%= t(".heading") %></h1>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <%= govuk_button_to(t(".add_user"), new_claims_school_user_path, method: :get) %>

      <%= render partial: "shared/users_list", locals: {
        users: @users,
        school_or_org: @school,
        user_show_path: "claims_school_user_path",
      } %>
    </div>
  </div>
</div>
