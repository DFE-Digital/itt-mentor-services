<% render "claims/support/primary_navigation", current: :organisations %>

<% content_for(:before_content) do %>
  <%= govuk_back_link(href: claims_support_school_mentor_path(id: @mentor.id)) %>
<% end %>

<% if policy(@mentor).destroy? %>
