<%= content_for :page_title, sanitize(@school.name) %>

<div class="govuk-width-container">
  <h1 class="govuk-heading-l"><%= @school.name %></h1>

  <%= render "claims/support/schools/secondary_navigation", school: @school %>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h2 class="govuk-heading-m"><%= t(".heading") %></h2>
      <%= govuk_button_to(t(".add_user"), new_claims_support_school_user_path, method: :get) %>

      <%= render partial: "shared/users_list", locals: {
        users: @users,
        school_or_org: @school,
        user_show_path: "claims_support_school_user_url",
      } %>
    </div>
  </div>
</div>
