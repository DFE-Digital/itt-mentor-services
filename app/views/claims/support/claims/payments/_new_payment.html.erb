<%= content_for :page_title, t(".heading") %>

<span class="govuk-caption-l"><%= t(".caption") %></span>
<h1 class="govuk-heading-l"><%= t(".heading") %></h1>

<p class="govuk-body"><%= t(".information", count: @submitted_claims.count) %></p>
<p class="govuk-body"><%= t(".description") %></p>

<%= govuk_list type: :bullet do |list| %>
  <% t(".list").each do |item| %>
    <%= tag.li item %>
  <% end %>
<% end %>

<%= govuk_warning_text text: t(".disclaimer") %>

<%= govuk_button_to t(".submit"), claims_support_claims_payments_path %>
