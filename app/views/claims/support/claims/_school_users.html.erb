<h1 class="govuk-heading-l"><%= t(".heading") %></h1>

<% if organisation.users.any? %>
  <%= govuk_table do |table| %>
    <% table.with_head do |head| %>
      <% head.with_row do |row| %>
        <% row.with_cell text: t(".name") %>
        <% row.with_cell text: t(".email") %>
        <% row.with_cell text: t(".last_signed_in") %>
      <% end %>
    <% end %>

    <% table.with_body do |body| %>
      <% organisation.users.each do |user| %>
        <% body.with_row do |row| %>
          <% row.with_cell text: user.full_name %>
          <% row.with_cell text: user.email %>
          <% row.with_cell text: user.last_signed_in_at ? l(user.last_signed_in_at, format: :short) : t(".never_signed_in") %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <p class="govuk-body"><%= t(".no_users") %></p>
<% end %>
