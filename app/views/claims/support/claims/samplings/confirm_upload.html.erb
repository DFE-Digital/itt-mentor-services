<%= render "claims/support/primary_navigation", current: :claims %>
<% content_for(:page_title) { sanitize t(".page_title") } %>
<% content_for(:before_content) do %>
  <%= govuk_back_link href: upload_claims_support_claims_samplings_path %>
<% end %>

<div class="govuk-width-container">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-l"><%= t(".caption") %></span>
      <h1 class="govuk-heading-l"><%= t(".title") %></h1>

      <p class="govuk-body">
        <%= t(".claims_count", count: @claim_ids.count) %>
      </p>

      <%= form_with(
        url: process_upload_claims_support_claims_samplings_path,
        method: "put",
        data: { turbo: false },
      ) do |f| %>
        <%= f.hidden_field "claim_ids", value: @claim_ids, multiple: true %>

        <%= f.govuk_submit(t(".upload_data")) %>
      <% end %>

      <%= govuk_warning_text(text: t(".providers_will_be_emailed")) %>

      <p class="govuk-body">
        <%= govuk_link_to t(".cancel"), upload_claims_support_claims_samplings_path, no_visited_state: true %>
      </p>
    </div>
  </div>
</div>
