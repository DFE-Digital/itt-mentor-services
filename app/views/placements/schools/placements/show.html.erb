<%= content_for :page_title, sanitize(@placement.subject_names) %>

<%= render "placements/schools/primary_navigation", school: @school, current_navigation: :placements %>

<%= content_for(:before_content) do %>
  <%= govuk_back_link(href: placements_school_placements_path(@school.id)) %>
<% end %>

<div class="govuk-width-container">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h2 class="govuk-heading-l govuk-!-margin-bottom-2">
        <%= @placement.subject_names %>
      </h2>

      <div class="govuk-!-margin-top-0 govuk-!-margin-bottom-6">
        <%= render Placement::StatusTagComponent.new(placement: @placement) %>
      </div>

      <%= govuk_summary_list do |summary_list| %>
        <% if !@school.primary_or_secondary_only? %>
          <% summary_list.with_row do |row| %>
            <% row.with_key(text: t(".attributes.placements.school_level")) %>
            <% row.with_value(text: @placement.school_level) %>
          <% end %>
        <% end %>
        <% summary_list.with_row do |row| %>
          <% row.with_key(text: t(".attributes.placements.subject")) %>
          <% row.with_value do %>
            <ul class="govuk-list">
              <% @placement.subjects.each do |subject| %>
                <li><%= subject.name %></li>
              <% end %>
            </ul>
          <% end %>
        <% end %>
        <% summary_list.with_row do |row| %>
          <% row.with_key(text: t(".attributes.placements.mentor")) %>
          <% row.with_value do %>
            <% if @placement.mentors.any? %>
              <ul class="govuk-list">
                <% @placement.mentors.each do |mentor| %>
                  <li><%= mentor.full_name %></li>
                <% end %>
              </ul>
            <% else %>
              <%= t("placements.schools.placements.not_yet_known") %>
            <% end %>
          <% end %>
          <% if @school.mentors.blank? %>
            <% row.with_action(
              text: t(".add_a_mentor"),
              href: new_placements_school_mentor_path,
              visually_hidden_text: t(".attributes.placements.mentor"),
            ) %>
          <% else %>
            <% row.with_action(
              text: t(".change_mentor", count: @placement.mentors.count),
              href: edit_mentors_placements_school_placement_path(@school, @placement),
              visually_hidden_text: t(".attributes.placements.mentor"),
            ) %>
          <% end %>
        <% end %>
        <% summary_list.with_row do |row| %>
          <% row.with_key(text: t(".attributes.placements.provider")) %>
          <% row.with_value(text: @placement.provider_name) %>
          <% if @school.partner_providers.blank? %>
            <% row.with_action(
              text: t(".add_a_partner_provider"),
              href: new_placements_school_partner_provider_path,
              visually_hidden_text: t(".attributes.placements.provider"),
            ) %>
          <% else %>
            <% row.with_action(
              text: t(".change_provider", count: @placement.provider.present? ? 1 : 0),
              href: edit_provider_placements_school_placement_path(@school, @placement),
              visually_hidden_text: t(".attributes.placements.provider"),
            ) %>
          <% end %>
       <% end %>
      <% end %>

      <%= govuk_link_to t(".delete_placement"),
                        remove_placements_school_placement_path(@school, @placement),
                        class: "app-link app-link--destructive" %>
    </div>
  </div>
</div>
