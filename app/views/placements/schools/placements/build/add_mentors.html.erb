<%= content_for :page_title, sanitize("Add mentors") %>
<%= render "placements/schools/primary_navigation", school: @school, current_navigation: :placements %>

<%= content_for(:before_content) do %>
  <%= govuk_back_link(href: add_subject_placements_school_placement_build_index_path(@school, :add_subject)) %>
<% end %>

<div class="govuk-width-container">
  <%= form_for(@placement, url: placements_school_placement_build_path(@school, id: :add_mentors), method: :put) do |f| %>
    <%= f.govuk_error_summary %>

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l">Add placement</span>

        <%= f.govuk_check_boxes_fieldset :mentor_ids, legend: { size: "l", text: "Mentors" }, required: true do %>
          <% @school.mentors.each do |mentor| %>
            <%= f.govuk_check_box :mentor_ids, mentor.id, label: { text: mentor.full_name }, checked: @selected_mentors.include?(mentor) %>
          <% end %>
          <%= f.govuk_check_box_divider %>
          <%= f.govuk_check_box :mentor_ids, :not_known, label: { text: "Not Known Yet" }, exclusive: true %>
        <% end %>

        <%= f.govuk_submit "Continue" %>

        <p class="govuk-body">
          <%= govuk_link_to("Cancel", placements_school_placements_path(@school), no_visited_state: true) %>
        </p>
      </div>
    </div>
  <% end %>
</div>
