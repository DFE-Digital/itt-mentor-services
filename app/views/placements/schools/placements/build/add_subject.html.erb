<%= content_for :page_title, sanitize(t(".title")) %>
<%= render "placements/schools/primary_navigation", school: @school, current_navigation: :placements %>

<%= content_for(:before_content) do %>
  <% if @school.primary_or_secondary_only? || @enable_quick_navigation %>
    <%= govuk_back_link(href: @back_link_path) %>
  <% else %>
    <%= govuk_back_link(href: add_phase_placements_school_placement_build_index_path(@school, :add_phase)) %>
  <% end %>
<% end %>

<div class="govuk-width-container">
  <%= form_for(@placement, url: placements_school_placement_build_path(@school, id: :add_subject), method: :put) do |f| %>
    <%= f.govuk_error_summary %>

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l"><%= t(".add_placement") %></span>

        <% if @phase == "Primary" %>
          <%= f.govuk_radio_buttons_fieldset :subject_ids, legend: { size: "l", text: t(".subject") } do %>
            <% @subjects.each do |subject| %>
              <%= f.govuk_radio_button :subject_ids, subject.id, label: { text: subject.name }, checked: @selected_subjects&.include?(subject) %>
            <% end %>
          <% end %>
        <% else %>
          <%= f.govuk_check_boxes_fieldset :subject_ids, legend: { size: "l", text: t(".subject") } do %>
            <% @subjects.each do |subject| %>
              <%= f.govuk_check_box :subject_ids, subject.id, label: { text: subject.name }, checked: @selected_subjects&.include?(subject) %>
            <% end %>
          <% end %>
        <% end %>

        <%= f.govuk_submit t(".continue") %>
      </div>
    </div>
  <% end %>

  <p class="govuk-body">
    <%= govuk_link_to(t(".cancel"), placements_school_placements_path(@school), no_visited_state: true) %>
  </p>
</div>
