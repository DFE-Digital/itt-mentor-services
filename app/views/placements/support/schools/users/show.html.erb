<%= content_for :page_title, sanitize("#{@user.full_name} - #{@school.name}") %>
<%= render "placements/support/primary_navigation", current_navigation: :organisations %>
<%= content_for(:before_content) do %>
  <%= govuk_back_link(href: placements_support_school_users_path(@school)) %>
<% end %>

<%= render "placements/support/organisations/users/details",
  user: @user,
  organisation: @school %>

<div class="govuk-width-container">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <%= link_to(t(".remove_user"),
                  remove_placements_support_school_user_path(@school, @user),
                  class: "govuk-link govuk-link--no-visited-state app-link--destructive") %>
    </div>
  </div>
</div>
