<%= content_for(:before_content) do %>
  <%= govuk_back_link(href: placements_support_organisation_users_path(@organisation)) %>
<% end %>

<div class="govuk-width-container">
  <%= form_with(model: @user, url: check_placements_support_organisation_users_path, method: "get") do |f| %>
    <%= f.govuk_error_summary %>

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l"><%= t(".caption") %></span>
        <h2 class="govuk-heading-l"><%= t(".title") %></h2>

        <div class="govuk-form-group">
          <%= f.govuk_text_field :first_name,
                                  class: "govuk-input--width-20",
                                  label: { text: t(".attributes.users.first_name"), size: "s" } %>
        </div>

        <div class="govuk-form-group">
          <%= f.govuk_text_field :last_name,
                                  class: "govuk-input--width-20",
                                  label: { text: t(".attributes.users.last_name"), size: "s" } %>
        </div>

        <div class="govuk-form-group">
          <%= f.govuk_text_field :email, label: { text: t(".attributes.users.email"), size: "s" } %>
        </div>

        <%= f.govuk_submit t("continue") %>

        <p class="govuk-body">
          <%= govuk_link_to(t("cancel"), placements_support_organisation_users_path(@organisation)) %>
        </p>
      </div>
    </div>
  <% end %>
</div>