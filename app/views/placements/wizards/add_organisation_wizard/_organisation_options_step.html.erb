<% if organisation_options_step.errors.any? %>
  <% content_for :page_title, t(".title_with_error", organisation_count: organisation_options_step.organisations.count, search_param: organisation_options_step.search_params) %>
<% else %>
  <% content_for :page_title, t(".title", organisation_count: organisation_options_step.organisations.count, search_param: organisation_options_step.search_params) %>
<% end %>

<%= render OptionsFormComponent.new(
  model: organisation_options_step,
  scope: organisation_options_step.scope,
  url: current_step_path,
  search_param: organisation_options_step.search_params,
  records: organisation_options_step.organisations,
  records_klass: @wizard.organisation_type,
  back_link: back_link_path,
  method: :put,
) %>
