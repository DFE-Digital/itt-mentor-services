<% content_for :page_title, organisation_step.errors.any? ? t(".title_with_error.#{@wizard.organisation_type}") : t(".title.#{@wizard.organisation_type}") %>

<%= render AutocompleteSelectFormComponent.new(
  model: organisation_step,
  scope: organisation_step.scope,
  url: current_step_path,
  method: :put,
  data: {
    autocomplete_path_value: organisation_step.autocomplete_path_value,
    autocomplete_return_attributes_value: organisation_step.autocomplete_return_attributes_value,
  },
  input: {
    value: organisation_step.name,
    label: t(".title.#{@wizard.organisation_type}"),
    caption: t(".caption"),
    previous_search: organisation_step.id,
  },
) %>
