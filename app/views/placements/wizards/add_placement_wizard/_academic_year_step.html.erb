<% content_for :page_title, academic_year_step.errors.any? ? t(".title_with_error", contextual_text:) : t(".title", contextual_text:) %>

<%= form_for(academic_year_step, url: current_step_path, method: :put) do |f| %>
  <%= f.govuk_error_summary %>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-l"><%= contextual_text %></span>

      <%= f.govuk_collection_radio_buttons(
        :academic_year_id,
        academic_year_step.academic_years_for_selection,
        :value, :name,
        legend: { size: "l", text: t(".select_an_academic_year"), tag: "h1" }
      ) %>

      <%= f.govuk_submit t(".continue") %>
    </div>
  </div>
<% end %>
