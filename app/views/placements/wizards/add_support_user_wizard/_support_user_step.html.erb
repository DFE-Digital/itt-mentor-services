<% content_for :page_title, support_user_step.errors.any? ? t(".title_with_error") : t(".title") %>

<%= form_for(support_user_step, url: current_step_path, method: :put) do |f| %>
  <%= f.govuk_error_summary %>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-l"><%= t(".add_support_user") %></span>
      <h1 class="govuk-heading-l"><%= t(".personal_details") %></h1>

      <div class="govuk-form-group">
        <%= f.govuk_text_field :first_name,
                               width: 20,
                               label: { text: User.human_attribute_name(:first_name), size: "s" } %>
      </div>

      <div class="govuk-form-group">
        <%= f.govuk_text_field :last_name,
                               width: 20,
                               label: { text: User.human_attribute_name(:last_name), size: "s" } %>
      </div>

      <div class="govuk-form-group">
        <%= f.govuk_text_field :email,
                               label: { text: User.human_attribute_name(:email), size: "s" },
                               hint: { text: t(".email.hint") } %>
      </div>

      <%= f.govuk_submit t(".continue") %>
    </div>
  </div>
<% end %>
