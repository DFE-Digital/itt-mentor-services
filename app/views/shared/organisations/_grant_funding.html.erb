<%= govuk_summary_list(html_attributes: { id: "grant-funding" }) do |summary_list| %>
  <% summary_list.with_row do |row| %>
    <% row.with_key(text: t(".region")) %>
    <% row.with_value(**details_field_args("#{organisation.region.name} (#{organisation.town})")) %>
  <% end %>
  <% summary_list.with_row do |row| %>
    <% row.with_key(text: t(".hourly_rate")) %>
    <% row.with_value(**details_field_args(humanized_money_with_symbol(organisation.region.funding_available_per_hour))) %>
  <% end %>
<% end %>
